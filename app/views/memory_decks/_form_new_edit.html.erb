<div id="sheet" class="clearfix">
  <div class="left">
    <div class="header">
      <h1>Deck</h1>
    </div>
    <div class='content'>
      <%= form_for(@deck) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: (@deck.errors.full_messages_for(:title).first || "Enter your title")%>
        <%= hidden_field_tag(:user_id, params[:user_id]) %>
        <%= f.submit %>
      <% end %>
    </div>    
  </div>
</div>