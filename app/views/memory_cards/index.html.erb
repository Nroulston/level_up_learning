<div id="sheet" class="clearfix">
  <div class="left">
    <div class="header">
      <h1>Cards</h1>
      <div class="links">
        <%# link_to "Create a card", new_user_memory_card_path  %>
        <%# TODO create nested route for creation of card %>
      </div>
    </div>
    <div class='content'>
      <h3>Your Cards</h3>
      <% if @user %>
        <ul>
          <% @user_cards.each  do |card| %>
            <li><%= link_to card.question, memory_card_path(card)  %></li>
          <% end %>
        </ul>
        <h3>Browse student cards</h3>
        <ul>
          <% @memory_cards.each do |card| %>
            <li><%= link_to card.question, memory_card_path(card)  %></li>
          <% end %>
        </ul>
      <%else %>
        <%# render partial: "not_current_user" %>
      <% end %>
    </div>
  </div>
</div>
